name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main # Deploy when changes are pushed to the main branch of the private repo

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout public repo
        uses: actions/checkout@v2
        with:
          repository: leoplureodon/fe # Public repo for GitHub Pages
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Checkout private repo
        uses: actions/checkout@v2
        with:
          repository: leoplureodon/leoplureodon-dev # Private repo with source code
          token: ${{ secrets.GITHUB_TOKEN }}
          path: private-repo

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"

      - name: Install dependencies
        run: |
          cd private-repo  # Navigate to the private repo folder
          npm install

      - name: Build React app
        run: |
          cd private-repo  # Navigate to the private repo folder
          npm run build  # Build the React app to the 'build' directory

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          personal_token: ${{ secrets.GITHUB_TOKEN }}
          destination_dir: private-repo/build # Point to the build directory from the private repo
          branch: gh-pages
          repository: yourusername/your-public-gh-pages-repo # Public repo for GitHub Pages
